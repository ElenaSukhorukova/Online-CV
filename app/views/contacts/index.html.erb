<% if @contacts.try(:any?) %>
  <% @contacts.each do |contact| %>
    <%= contact.address %>
    <%= contact.email %>
    <%= contact.phone %>
    <%= contact.linkedin %>
    <%= contact.github %>
    <%= contact.telegram %>
    <%= contact.locale %>

    <%= link_to t('link.show', model: i18n_model_name(contact).downcase), contact_path(contact) %>
    <%= link_to t('link.edit', model: i18n_model_name(contact).downcase), edit_contact_path(contact) %>
    <%= button_to t('submit.delete', model: i18n_model_name(contact).downcase), contact_path(contact), 
      method: :delete, class: "btn btn-light", :onclick => "return confirm('Are you sure?')", :remote => true %>  
  <% end %>
<% end %>
