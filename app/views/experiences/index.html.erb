<% if @experiences.try(:any?) %>
  <% @experiences.each do |experience| %>
    <%= experience.employer %>
    <%= experience.position %>
    <%= experience.date_of_begin.strftime('%Y-%m') %>
    <%= experience.date_of_end.strftime('%Y-%m') %>
    <%= experience.description %>
    <%= experience.locale %>

    <%= link_to t('link.show', model: i18n_model_name(experience).downcase), experience_path(experience) %>
    <%= link_to t('link.edit', model: i18n_model_name(experience).downcase), edit_experience_path(experience) %>
    <%= button_to t('submit.delete', model: i18n_model_name(experience).downcase), experience_path(experience), 
      method: :delete, class: "btn btn-light", :onclick => "return confirm('Are you sure?')", :remote => true %>  
  <% end %>
<% end %>
  