<section class='line my-4'>
  <p>
    <strong><i><%= attribute_model(experience, :employer) %>&nbsp;</i></strong>
    <%= experience.employer %>
  </p>
  <p>
    <strong><i><%= attribute_model(experience, :position) %>&nbsp;</i></strong>
    <%= experience.position %>
  </p>
  <p>
    <strong><i><%= attribute_model(experience, :date_of_begin) %>&nbsp;</i></strong>
    <%= I18n.l(experience.date_of_begin, format: '%B %Y') %>
  </p>
  <p>
    <strong><i><%= attribute_model(experience, :date_of_end) %>&nbsp;</i></strong>
    <%= experience.date_of_end.blank? ? t('page.blank_yaer_ending_experience') : I18n.l(experience.date_of_end, format: '%B %Y') %>
  </p>
  <p>
    <strong><i><%= attribute_model(experience, :description) %>&nbsp;</i></strong><br />
    <%= simple_format(experience.description) %>
  </p>
  <%= turbo_frame_tag "experience_#{experience.id}" do %>
    <%= link_to t('link.edit', model: i18n_model_name(experience).downcase), edit_experience_path(experience),
    class: "btn btn-outline-dark mb-4 mx-1" %>
  <% end %>
  <%= button_to t('submit.delete', model: i18n_model_name(experience).downcase), experience_path(experience), 
   method: :delete, class: "btn btn-outline-dark mb-4 mx-1", :onclick => "return confirm('Are you sure?')", :remote => true %>  
</section>