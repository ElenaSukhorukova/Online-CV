<h2><%= t(".resend_unlock_instructions") %></h2>
<div class='col-sm-5'>
  <%= simple_form_for(resource, as: resource_name, url: unlock_path(resource_name), 
    html: { method: :post }, data: { turbo: false }) do |f| %>
    <%= f.error_notification %>
    <%= f.full_error :unlock_token %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
    </div>

    <div class="form-actions mt-2 mb-2">
      <%= f.button :submit, t(".resend_unlock_instructions"), class: "btn btn-light"  %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>