<% if @personal_details.try(:any?) %>
  <% @personal_details.each do |personal_detail| %>
    <%= personal_detail.title %>
    <%#= image_tag personal_detail.photo, width: '200px', class: "rounded-circle d-block", style: 'margin-right: auto;
  margin-left: 0;' if personal_detail.photo.attached? %><br />
    <%= personal_detail.full_name %>
    <%= personal_detail.position %>
    <%= personal_detail.about %>
    <%= personal_detail.locale %>

    <%= link_to t('link.show', model: i18n_model_name(personal_detail).downcase), personal_detail_path(personal_detail) %>
    <%= link_to t('link.edit', model: i18n_model_name(personal_detail).downcase), edit_personal_detail_path(personal_detail) %>
    <%= button_to t('submit.delete', model: i18n_model_name(personal_detail).downcase), personal_detail_path(personal_detail), 
      method: :delete, class: "btn btn-light", :onclick => "return confirm('Are you sure?')", :remote => true %>  
  <% end %>
<% end %>
