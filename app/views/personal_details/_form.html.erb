<%= simple_form_for model, method: method do |f| %>
  <%#= f.file_field :photo, class:"form-control", id: "formFile" %><br />
  <%= f.input :full_name %><br />
  <%= f.input :position %><br />
  <%= f.input :about %><br />
  <%= f.input :locale, as: :radio_buttons, collection: Education::VALID_LOCALES, 
                                            item_wrapper_class: 'inline' %>
  <%= f.button :submit, f.object.new_record? ? t('submit.create_many', model: i18n_model_name(f.object).downcase) 
                                                : t('submit.edit', model: i18n_model_name(f.object).downcase), 
                                                class: "btn btn-outline-dark my-2 btn-sm" %>
  <%= render 'shared/cancel_button' if f.object.persisted? %>
<% end %> 
