<%= turbo_frame_tag dom_id(@course) do %>
  <div class='my-4 mx-4'>
    <%= render 'shared/go_back_button' %>
    <h3 class='md-4'><%= t('page.new_one', model: i18n_model_name(@course).downcase) %></h3>
    <%= render partial: 'form',  locals: { model: [@user, @course], method: :post, 
      submit: t('submit.create_one', model: i18n_model_name(@course).downcase) } %>
  </div>
<% end %>
