<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <% unless user_signed_in? %>
          <li class="nav-item">
            <%= link_to t('menu.owner'), admin_path, role: 'button', class: "nav-link" if controller_name == 'home' && action_name == 'index' %>     
          </li>
          <%= render partial: 'admin' if action_name == 'admin' %>
        <% else %>
          <li class="nav-item">
            <%= link_to t('menu.main_page'), root_path, class: "nav-link", style: 'padding-left: 40px;' %>
          </li>
          <li class="nav-item">
            <%= link_to t('menu.admin_page'), user_path, class: "nav-link" %>
          </li>      
          <li class="nav-item">
            <%= link_to t('menu.sign_out'), sign_out_path, 'data- turbo_method': :delete, 
            :onclick => "return confirm('Are you sure?')", :remote => true, class: "nav-link" %>
          </li>
        <% end %>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <%= t('submit.language') %>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to 'English', controller: controller_name, action: action_name, locale: :en, class: "dropdown-item" %></li>
            <li><%= link_to 'Русский', controller: controller_name, action: action_name, locale: :ru, class: "dropdown-item" %></li>
          </ul>
        </li>
      </ul>
    </div>
  </naw>  
</header>
