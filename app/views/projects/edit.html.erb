<%= turbo_frame_tag dom_id(@project) do %>
  <div class='my-4 mx-4'>
    <h3 class='md-4'><%= t('page.edit', model: i18n_model_name(@project)) %></h3>
    <%= render partial: 'form', locals: { project: @project, method: :put, 
      url: project_path(@project), submit: t('submit.edit', model: i18n_model_name(@project).downcase) } %>
  </div>
<% end %>