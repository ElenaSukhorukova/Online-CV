<% if @educations.try(:any?) %>
  <% @educations.each do |education| %>
    <%= education.name_organization %>
    <%= education.degree %>
    <%= education.field_of_study %>
    <%= education.date_of_end.strftime('%Y')  %>
    <%= education.locale %>

    <%= link_to t('link.show', model: i18n_model_name(education).downcase), education_path(education) %>
    <%= link_to t('link.edit', model: i18n_model_name(education).downcase), edit_education_path(education) %>
    <%= button_to t('submit.delete', model: i18n_model_name(education).downcase), education_path(education), 
      method: :delete, class: "btn btn-light", :onclick => "return confirm('Are you sure?')", :remote => true %>  
  <% end %>
<% end %>
