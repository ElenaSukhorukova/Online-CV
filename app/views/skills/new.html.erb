<%= turbo_frame_tag dom_id(@skill) do %>
  <div class='my-4 mx-4'>
    <%= render 'shared/go_back_button' %>
    <h3 class='md-4'><%= t('page.new_one', model: i18n_model_name(@skill).downcase) %></h3>
    <%= render partial: 'form',  locals: { skill: @skill, method: :post, 
      url: user_skills_path(@user), submit: t('submit.create_one', model: i18n_model_name(@skill).downcase) } %>
  </div>
<% end %>