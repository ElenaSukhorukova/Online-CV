<% if @skills.try(:any?) %>
  <% @skills.each do |skill| %>
    <%= skill.skillname %>
    <%= skill.description %>
    <%= skill.locale %>

    <%= link_to t('link.show', model: i18n_model_name(skill).downcase), skill_path(skill) %>
    <%= link_to t('link.edit', model: i18n_model_name(skill).downcase), edit_skill_path(skill) %>
    <%= button_to t('submit.delete', model: i18n_model_name(skill).downcase), skill_path(skill), 
      method: :delete, class: "btn btn-light", :onclick => "return confirm('Are you sure?')", :remote => true %>  
  <% end %>
<% end %>
